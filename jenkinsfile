pipeline {
    agent any

    stages {
        stage('Compilation') {
            steps {
                parallel {
                    dir('kafkaConsumer') {
                        sh "chmod +x -R ${env.WORKSPACE}"
                        sh './mvnw clean install -DskipTests'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './mvnw package'
            }
        }
        stage('Tests') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './mvnw test -Punit'
            }
        }
    }
}

