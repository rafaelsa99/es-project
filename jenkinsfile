pipeline {
    agent any

    stages {
        stage('Compilation 1') {
            steps {
                    dir('kafkaConsumer') {
                            sh "chmod +x -R ${env.WORKSPACE}"
                            sh 'echo "Clean install on kafkaConsumer"'
                            sh './mvnw clean install -DskipTests'
                }
            }
        }
        stage('Compilation 2') {
                    steps {
                        dir('projectbackend') {
                            sh "chmod +x -R ${env.WORKSPACE}"
                            sh 'echo "Clean install on projectbackend"'
                            sh './mvnw clean install -DskipTests'
                        }
                    }
        }
        stage('Build') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './mvnw package'
            }
        }
        stage('Tests') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './mvnw test -Punit'
            }
        }
    }
}

